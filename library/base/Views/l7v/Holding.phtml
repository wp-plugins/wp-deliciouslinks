<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head profile="http://gmpg.org/xfn/11">
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<title>Coming Soon</title>
<style type="text/css" media="screen">
html,body {
	margin: 0;
	padding: 0;
	height: 100%;
}

body {
	font: 40px Verdana, Geneva, Arial, sans-serif;
	color: #ffffff;
	background: #000000;
}

#wrap {
	position: relative;
	width: 100%;
	height: 100%;
	margin: 0 auto;
}

#content {
	text-align: center;
	position: absolute;
	top: 50%;
	left: 50%;
	height: 100px;
	margin-top: -50px;
	width: 100%;
	margin-left: -50%;
}

#content span {
	font-weight: bold;
	font-size: 24px
}
</style>
<script language="JavaScript1.2">
hex=0 // Initial color value.
function fadeInText(elName){ 
if(hex<255) { //If color is not black yet
hex+=1; // increase color darkness
document.getElementById(elName).style.color="rgb("+hex+","+hex+","+hex+")";
setTimeout("fadeInText('"+elName+"')",10); 
}
else
{
	setTimeout("fadeOutText('"+elName+"')",30); 
}
} 
function fadeOutText(elName)
{
if(hex>0) { //If color is not black yet
hex-=1; // increase color darkness
document.getElementById(elName).style.color="rgb("+hex+","+hex+","+hex+")";
setTimeout("fadeOutText('"+elName+"')",20); 
}
else
{
	setTimeout("fadeOutText('"+elName+"')",30); 
}
}
</script>
</head>
<body onload="fadeInText('text')">
<div id="wrap">
<div id="content">
<p id="samplex">
<div id="text" style="width: 100%">
<h3>Coming Soon</h3>
</div>
</p>
</div>
</div>

</body>
</html>
